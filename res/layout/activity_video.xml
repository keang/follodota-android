<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <com.google.android.youtube.player.YouTubePlayerView
      android:id="@+id/player"
      android:layout_width="200dp"
      android:layout_height="match_parent"
      android:layout_alignParentBottom="true"
      android:layout_alignParentRight="true"
      android:layout_below="@+id/match_title"
      android:layout_toRightOf="@+id/round" />
  
  <com.follodota.utils.TypefaceTextView
      android:id="@+id/round"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/match_title"
      android:layout_alignParentLeft="true"
      android:paddingLeft="10dp"
      android:text="Grand Championship"
      android:textAlignment="center"
      android:textAppearance="@android:style/TextAppearance.Small" />

  <com.follodota.utils.TypefaceTextView
      android:id="@+id/match_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:padding="10dp"
      android:text="Navi vs Alliance"
      android:textAlignment="center"
      android:textAppearance="@android:style/TextAppearance.Large" />

  <com.follodota.utils.TypefaceTextView
      android:id="@+id/league_name1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/round"
      android:layout_below="@+id/round"
      android:paddingBottom="10dp"
      android:paddingLeft="10dp"
      android:text="The International"
      android:textAlignment="center"
      android:textAppearance="@android:style/TextAppearance.Small" />

<ListView
	    android:id="@+id/game_list_view"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignRight="@+id/league_name1"
	    android:layout_below="@id/round"
	    android:layout_marginLeft="16dp" 
	    android:paddingTop="16dp">
</ListView>
</RelativeLayout>
