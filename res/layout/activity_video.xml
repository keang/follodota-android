<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <com.google.android.youtube.player.YouTubePlayerView
      android:id="@+id/player"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>
  <Button 
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:padding="4dp"
      android:layout_margin="4dp"
      android:id="@+id/info_button"
      android:alpha="0.8"
      android:background="@android:drawable/ic_menu_more"/>
  <LinearLayout
      android:id="@+id/other_views"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:padding="5dp"
      android:background="#dd000000"
      android:gravity="center_horizontal"
      android:orientation="vertical">
      <LinearLayout 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center"
          android:layout_gravity="center">
          <LinearLayout 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">
		      <com.follodota.utils.TypefaceTextView
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:id="@+id/match_title"
		          android:textAlignment="center"
		          android:padding="10dp"
		          android:textAppearance="@android:style/TextAppearance.Large"
		          android:text="Navi vs Alliance"/>

		      <com.follodota.utils.TypefaceTextView
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:id="@+id/round"
		          android:paddingLeft="10dp"
		          android:textAlignment="center"
		          android:textAppearance="@android:style/TextAppearance.Small"
		          android:text="Grand Championship"/>
		      
		      <com.follodota.utils.TypefaceTextView
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
			      android:paddingLeft="10dp"
		          android:id="@+id/league_name1"
		          android:textAlignment="center"
		          android:paddingBottom="10dp"
		          android:textAppearance="@android:style/TextAppearance.Small"
		          android:text="The International"/>
	      </LinearLayout>
	      
		  <Button 
		      android:layout_width="40dp"
		      android:layout_height="40dp"
		      android:padding="4dp"
		      android:layout_margin="4dp"
		      android:id="@+id/close_info_button"
		      android:alpha="0.8"
		      android:background="@android:drawable/ic_menu_close_clear_cancel"/>
	  </LinearLayout>
	<ListView 
	    android:id="@+id/game_list_view"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
    	android:layout_marginLeft="16dp"
    	android:layout_marginRight="16dp"></ListView>
  </LinearLayout>

</FrameLayout>
