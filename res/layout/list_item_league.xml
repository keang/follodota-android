<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:padding="10dp">

	    <ImageView
	        android:id="@+id/icon"
	        android:layout_width="@dimen/team_logo_size"
	        android:layout_height="@dimen/team_logo_size"
	        android:layout_gravity="center_vertical"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="10dp"
	        android:background="@drawable/team_logo_box2"
	        android:contentDescription="@string/hometeam_logo_description"
	        android:padding="3dp"
	        android:visibility="gone"
	        android:src="@drawable/logo" />

	    <com.follodota.utils.TypefaceTextView
	        android:id="@+id/name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:text=" vs " />

</LinearLayout>
